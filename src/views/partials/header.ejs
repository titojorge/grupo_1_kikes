<header class="encabezado">
    <section class="encabezado-3">
        <% if (locals.isLogged) { %>
        <div class="text-center">
            <div class="dropdown">
              <button class="btn btn-default dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <span>Bienvenido <%= locals.userLogged.nombre %></span>
                <% if (locals.userLogged.imagen) { %>
                    <img src="<%= locals.userLogged.imagen %>" width="40" style="border-radius: 100%;">
                <% } else { %>
                <svg xmlns="http://www.w3.org/2000/svg" height="30px" width="30px" fill="currentColor" viewBox="0 0 512 512">
                    <path d="M399 384.2C376.9 345.8 335.4 320 288 320H224c-47.4 0-88.9 25.8-111 64.2c35.2 39.2 86.2 63.8 143 63.8s107.8-24.7 143-63.8zM0 256a256 256 0 1 1 512 0A256 256 0 1 1 0 256zm256 16a72 72 0 1 0 0-144 72 72 0 1 0 0 144z"/>
                </svg>
                <% } %>
              </button>
              <ul class="dropdown-menu" style="display:none">
                <li><a class="dropdown-item" href="/detailUser/<%= locals.userLogged.id %>">Ver Perfil</a></li>
                <li><a class="dropdown-item ingresa cerrar-sesion" href="/cerrar-sesion">Cerrar Sesion</a></li>
              </ul>
            </div>
        </div>
        <% } else { %>
            <a class="ingresa" href="/login">Ingresar</a>
            <a class="crea" href="/register">Crear tu cuenta</a>
        <% } %>
    </section>
    <section class="encabezado-2">
        <a href="/home"><img src="/images/kike-logo.png" width="150px"></a>
        <a href="/products/list">Todos los productos</a>
        <a href="/products/new">Nuevo</a>
        <a href="#">Ofertas</a>
        <a href="#">Calzados</a>
        <a href="/users/">Todos Los Usuarios</a>
        <form class="input-busqueda" action="/products/searchResult" method="post">
            <input class="busqueda" type="search" name="buscar" placeholder="Buscar...">
            <button class="search-bar" type="submit">
                <i class="fa fa-search"></i>
            </button>
        </form>
        <a href="/productCart"><i class="fas fa-shopping-cart"></i></a>
    </section>
</header>