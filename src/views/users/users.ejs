<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('../partials/head') %>
  <link rel="stylesheet" href="/css/users.css">
</head>

<body>
  <%- include('../partials/header')%>
  <main class="body-users">
    <section class="users">
      <h1>Todos los usuarios</h1>
      <% users.forEach(function(elem) { %>

      <div class="card">
        <div class="head">
          <div class="circle"></div>
          <div class="img">
            <img class="img-user" src="<%= elem.imagen %>" alt="">
          </div>
        </div>

        <div class="description">
          <h3><%= elem.nombre %></h3>
          <h4><%= elem.apellido %></h4>
          <p>Usuario NÂ° <%= elem.id %> </p>
        </div>

        <div class="contact">
          <a href="/editUser/<%= elem.id %>">Editar</a>
        </div>
      </div>

      <% }) %>

    </section>

    <a class="comment-fixed" href="#">
      <i class="far fa-comments fa-spin"></i>
    </a>
  </main>
  <%- include('../partials/footer')%>
</body>

</html>