<!DOCTYPE html>
<html lang="en">
<head>
    <head>
        <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/register.css">
        <link rel="stylesheet" href="/css/users.css">
        <link rel="stylesheet" href="/css/user_details.css">
    </head>
</head>
<body>
    <%- include('../partials/header')%>
    
    <div class="card">
        <div class="head">
            <div class="circle"></div>
            <div class="img">
                <img class="img-user" src="<%= user.imagen %>" alt="">
            </div>
        </div>

        <div class="description">
            <h3><%= user.nombre %></h3>
            <h4><%= user.apellido %></h4>
            <p> <%= user.email %> </p>
            <p> <%= user.categoria %> </p>
            <p> <%= user.fecha_nacimiento %> </p>
        </div>

        <div class="contact">
            <a href="/editUser/<%= user.id %>">Editar</a>
        </div>
    </div>

    <%- include('../partials/footer')%>
</body>
</html>